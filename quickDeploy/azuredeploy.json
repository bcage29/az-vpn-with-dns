            "gatewaySku": {
              "type": "string",
              "defaultValue": "VpnGw1",
              "allowedValues": [
                "VpnGw1",
                "VpnGw2",
                "VpnGw3"
              ],
              "metadata": {
                "description": "The SKU of the Gateway. VpnGw1, VpnGw2, VpnGw3"
              }
            }
          },
          "variables": {
